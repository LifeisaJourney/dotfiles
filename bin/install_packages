#!/bin/bash

# go to script directory
cd "$( dirname "$0" )/../packages"

#install brew formulae
brew install $(cat "brew-formulae.txt") || exit 1

# install ruby
eval "$(rbenv init -)" || exit 1
rbenv install 2.3.1
rbenv global 2.3.1
rbenv rehash

# install gems
gem install bundler
rbenv rehash
bundle install
rbenv rehash

# install nvm & node
./install_nvm  || exit 1
nvm install v4.4.3

# install node & atom packages
npm install -g $(cat "node-packages.txt")
apm install --packages-file "atom-packages.txt"
