[color]
    diff = auto
    status = auto
    branch = auto
    grep = auto
[user]
    email = student@appacademy.io
    name = App Academy Student
[branch]
    autosetuprebase = always
[rerere]
    enabled = 1
[alias]
    check = diff --cached
    co = checkout
    fix = commit --am
    l = log --pretty=format:'%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset'
    llog = log --graph --decorate --name-status
    logp = log --graph --decorate -p --word-diff
    rework = rebase --interactive HEAD~10
    wcheck = diff --cached --color-words
    wdiff = diff --color-words
    wshow = show --color-words
[push]
    default = upstream
[core]
    excludesfile = ~/.gitignore
[credential]
    helper = cache
